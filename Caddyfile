{
  auto_https off
  admin off
}
:80 {
  @www header_regexp www Host ^www\.(.*)$
  @acceptwebp header Accept *image/webp*
  redir @www {scheme}://{re.www.1} 301
  handle @acceptwebp {
    try_files {path}.webp
  }
  @static path *.css *.js *.ico *.gif *.jpg *.jpeg *.png *.svg *.woff
  handle @static {
    header Cache-Control "public, max-age=31557600, must-revalidate"
  }
  encode zstd gzip
  root * /html
  file_server
  handle_errors {
    rewrite * /{http.error.status_code}.html
    file_server
  }
}
